{% extends 'deconnected.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
    <div class="container m-auto pt-3" style="width:500px">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h4>Enregistrement</h4>

        {{ form_start(registrationForm) }}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Nom</span>
            </div>
            {{ form_widget(registrationForm.nom) }}
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Email</span>
            </div>
            {{ form_widget(registrationForm.email) }}
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Mot de passe</span>
            </div>
            {{ form_widget(registrationForm.plainPassword) }}
        </div>
        <p>{{ form_row(registrationForm.agreeTerms) }}</p>

        <button type="submit" class="btn btn-warning w-100">Je m'enregistre</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
